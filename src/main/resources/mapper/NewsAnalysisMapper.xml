<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.finance_analysis.mapper.NewsAnalysisMapper">

    <resultMap id="NewsAnalysisRecordMap" type="com.finance_analysis.model.NewsAnalysisRecord">
        <id column="id" property="id"/>
        <result column="keyword" property="keyword"/>
        <result column="raw_response" property="rawResponse"/>
        <result column="requested_at" property="requestedAt"/>
    </resultMap>

    <insert id="insert" parameterType="com.finance_analysis.model.NewsAnalysisRecord" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO news_analyse (keyword, raw_response, requested_at)
        VALUES (#{keyword}, #{rawResponse}, #{requestedAt})
    </insert>

    <select id="findRecent" resultMap="NewsAnalysisRecordMap">
        SELECT id, keyword, raw_response, requested_at
        FROM news_analyse
        ORDER BY requested_at DESC
        LIMIT #{limit}
    </select>

</mapper>
